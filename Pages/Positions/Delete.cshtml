@page
@model UniversityApp.Pages.Positions.DeleteModel
@{
    ViewData["Title"] = "Delete Position";
}

<h1>Delete Position</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Position</h4>
    <dl class="row">
        <dt class="col-sm-2">Position Name</dt>
        <dd class="col-sm-10">@Model.Position.PositionName</dd>
        <dt class="col-sm-2">Hourly rate</dt>
        <dd class="col-sm-10">@Model.Position.HourlyRate</dd>
    </dl>
    
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
