@page
@model UniversityApp.Pages.Positions.IndexModel
@{
    ViewData["Title"] = "Positions List";
}

<h1>Positions</h1>

<p>
    <a asp-page="Create">Create New Position</a>
</p>

<table class="table">
    <thead>
        <tr>
        <tr>
            <th>Position Name</th>
            <th>Hourly Rate</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var position in Model.Positions)
        {
            <tr>
            <tr>
                <td>@position.PositionName</td>
                <td>@position.HourlyRate</td>

            </tr>
                <td>
                    <a asp-page="Edit" asp-route-id="@position.PositionID">Edit</a> |
                    <a asp-page="Details" asp-route-id="@position.PositionID">Details</a> |
                    <a asp-page="Delete" asp-route-id="@position.PositionID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

