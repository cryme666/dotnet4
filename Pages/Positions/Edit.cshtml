@page
@model UniversityApp.Pages.Positions.EditModel
@{
    ViewData["Title"] = "Edit Position";
}

<h1>Edit Position</h1>

<form method="post">
    <input type="hidden" asp-for="Position.PositionID" />
    <div class="form-group">
        <label asp-for="Position.PositionName" class="control-label"></label>
        <input asp-for="Position.PositionName" class="form-control" />
        <span asp-validation-for="Position.PositionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position.HourlyRate" class="control-label"></label>
        <input asp-for="Position.HourlyRate" class="form-control" />
        <span asp-validation-for="Position.HourlyRate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>
