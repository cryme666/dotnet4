@page
@model UniversityApp.Pages.Lecturers.DeleteModel
@{
    ViewData["Title"] = "Delete Lecturer";
}

<h1>Delete Lecturer</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Lecturer</h4>
    <dl class="row">
        <dt class="col-sm-2">Fullname</dt>
        <dd class="col-sm-10">@Model.Lecturer.FullName</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Lecturer.Phone</dd>
        <dt class="col-sm-2">Workplace</dt>
        <dd class="col-sm-10">@Model.Lecturer.Workplace</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Lecturer.Address</dd>
    </dl>
    
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
